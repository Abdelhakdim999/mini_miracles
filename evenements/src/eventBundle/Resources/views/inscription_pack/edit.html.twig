{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modifier inscription</h1>


    <div class="jumbotron text-center">
    <center>
    <h2><label  for="topicOptions" style="font-size: 28px; color: #5bc0de;" class="ng-binding" >Modifier l'inscription </label></h2>
    {{ form_start(edit_form) }}

    <fieldset style="width: 30%;margin: auto;">
    <TABLE class="table table-striped">
    <tr><td ><div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="border-bottom:none">
                <label  for="topicOptions" style="font-size: 18px; color: #0b3e6f;" class="ng-binding">La date d'inscription</label>

    {{ form_widget(edit_form.dateInsc) }}<br><br>
                <div  style="visibility: hidden">

                    <label id="now" >    {{ "now"|date("m/d/Y") }}</label>
                </div>

            </div>

        </td></tr>

    <tr><td ><div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="border-bottom:none">
                <label  for="topicOptions" style="font-size: 18px; color: #0b3e6f;" class="ng-binding">Prenom de l'enfant</label>

                {{ form_widget(edit_form.idEnfant) }}<br><br>

            </div>

        </td></tr>

    <tr><td ><div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="border-bottom:none">
                <label  for="topicOptions" style="font-size: 18px; color: #0b3e6f;" class="ng-binding">Pack</label>

                {{ form_widget(edit_form.idPack) }}<br><br>

            </div>

        </td></tr>



    <br><br>

    <tr><td colspan="2" align="center">
            <input type="submit" value="Modifier" class="btn btn-primary " id="sub">
        </td></tr>


    </TABLE>
    </fieldset>


    {{ form_end(edit_form) }}

    </center>





<div class="text-center">

    <a  class="btn btn-app" href="{{ path('inscription_pack_index') }}"><i class="fa fa-align-left"></i>Retour a la liste des inscriptions</a>

    <a class="btn btn-app" href="{{ path('inscription_pack_delete',{'idInscription':inscription_pack.idInscription}) }}">
        <i class="fa fa-trash"></i>
    </a>

</div>
{% endblock %}