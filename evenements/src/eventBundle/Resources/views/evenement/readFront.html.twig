
{% extends 'base2.html.twig' %}
{% block title 'Les événements' %}
{% block body %}
    <div class="jumbotron text-center">
        <h2><label  for="topicOptions" style="font-size: 28px; color: #5bc0de;" class="ng-binding" >Les événements disponibles </label> </h2>



            <div class="input-group input-group-sm">
                <input type="text" id="search" class="form-control" placeholder="Taper le nom">
                <span class="input-group-btn">
                      <button type="button" class="btn btn-info btn-flat"><i class="fa fa-search"></i></button>
                    </span>
            </div>
        <ul class="nav nav-second-level" id="entitiesNav">
        </ul>

        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script type="text/javascript">
            jQuery(document).ready(function() {
                var searchRequest = null;
                $("#search").keyup(function() {
                    var minlength = 1;
                    var that = this;
                    var value = $(this).val();
                    var entitySelector = $("#entitiesNav").html('');
                    if (value.length >= minlength ) {
                        if (searchRequest != null)
                            searchRequest.abort();
                        searchRequest = $.ajax({
                            type: "GET",
                            url: "{{ path('search') }}",
                            data: {
                                'q' : value
                            },
                            dataType: "text",
                            success: function(msg){
                                //we need to check if the value is the same
                                if (value===$(that).val()) {
                                    var result = JSON.parse(msg);
                                    $.each(result, function(key, arr) {
                                        $.each(arr, function(id, value) {
                                            if (key === 'evenement') {
                                                if (id !== 'error') {
                                                    console.log(value);
                                                    entitySelector.append('<ul> ');
                                                    entitySelector.append('<li><a href="readOneFront2/'+id+'">'+value[0]+'<a/></li>');
                                                    entitySelector.append('</ul> ');
                                                    entitySelector.append('');


                                                } else {

                                                    entitySelector.append('<li class="errorLi">'+value+'</li>');

                                                }
                                            }
                                        });
                                    });
                                }
                            }
                        });
                    }
                });
            });
        </script>

        <br><br>

    </div>

        <div class="container mt-4">


            <div class="row">
                {% for e in evenements %}


                    <div class="events-slide col-lg-4 col-sm-4 col-xs-12" style="display: block;">
                        <div class="events" >
                            <div class="events-img">


                                <div class="info-box">
                                    <span class="info-box-icon bg-info elevation-1"><img src="{{ asset('bundles/images/' ~ e.photo) }}" alt="vide" width="100px"></span>

                                    <div class="info-box-content">



                                        <h4>
                                            <a href="{{ path('evenement_affichFront2',{'id':e.id}) }}">
                                                {{ e.nom }}
                                            </a>
                                        </h4>
                                        <div class="date">



                                            <div class="date-box pull-left">

                                                <label  for="topicOptions" style="font-size: 18px;" class="ng-binding" >  {{ e.dateEvent|date("F - d - Y") }}</label>

                                            </div>
                                            <br>
                                            <br>

                                            <label  for="topicOptions" style="font-size: 14px;" class="ng-binding" > {{ e.lieu }}</label>

                                            <p class="multi-eli">
                                                {% if  e.nbPlaces <= 5 %}
                                                <label  for="topicOptions" style="font-size: 20px; color: #f65d20;" class="ng-binding" >
                                                    {{ e.nbPlaces }} places disponibles !! </label>

                                                {% else %}
                                                    {{ e.nbPlaces }} places disponibles

                                                {% endif %}

                                            </p>

                                        </div>




                                    <div class="events-content">



                                        <label  for="topicOptions" style="font-size: 20px; color: #5bc0de;" class="ng-binding" > <span class="info-box-number">{{ e.prix | number_format(0,'',' ')}} Dt</span> </label>

                                            <br>




                                    </div>
                                    </div>
                                    </div>
                                    <!-- /.info-box-content -->
                                </div>

                        </div>
                    </div>


            {% endfor %}

        </div>

        </div>

    <div class="navigation">
        {{ knp_pagination_render(evenements) }}
    </div>





{% endblock %}

