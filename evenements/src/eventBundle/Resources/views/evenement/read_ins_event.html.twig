
{% extends 'base.html.twig' %}
{% block title 'Les événements' %}
{% block body %}
    <div class="jumbotron text-center">
        <h2><label  for="topicOptions" style="font-size: 28px; color: #5bc0de;" class="ng-binding" >Les caractéristiques </label> </h2>



        <br><br>

    </div>

    <div class="container mt-4">


        <div class="row">
            {% for e in inscriptions %}
                <div class="events-slide col-lg-4 col-sm-4 col-xs-12" style="display: block;">
                    <div class="events" >
                        <div class="events-img">


                            <div class="info-box">
                                <span class="info-box-icon bg-info elevation-1"><i class="fa fa-book"></i></span>

                                <div class="info-box-content">



                                    <h4>


                                        <label  for="topicOptions" style="font-size: 18px;" class="ng-binding" >
                                            Evénement : </label><br> {{ e.id_event.nom }}
                                        <br><br>

                                        <label  for="topicOptions" style="font-size: 18px; color: #0b3e6f;" class="ng-binding" >
                                            {{ e.id_enfant.nom}}
                                            {{ e.id_enfant.prenom}}
                                        </label>
                                    </h4>
                                    <div class="date">



                                        <div class="date-box pull-left">

                                            <label  for="topicOptions" style="font-size: 18px;" class="ng-binding" >
                                                {{ e.dateInsc|date("F - d - Y")}}</label>

                                        </div>
                                        <br>
                                        <br>




                                    </div>




                                    <div class="events-content">



                                        <label  for="topicOptions" style="font-size: 20px; color: #5bc0de;" class="ng-binding" > <span class="info-box-number">{{ e.prix | number_format(0,'',' ')}} Dt</span> </label>

                                        <br>


                                        <br>
                                        <br>

                                    </div>

                                    <div>
                                        <a class="btn btn-app" href="{{ path('inscription_event_pdf', { 'id': e.idInsc }) }}">
                                            <i class="fa fa-edit"></i> pdf
                                        </a>

                                    </div>
                                </div>
                            </div>
                            <!-- /.info-box-content -->
                        </div>

                    </div>
                </div>


            {% endfor %}



        </div>

    </div>




    <div class="navigation">
        {{ knp_pagination_render(inscriptions) }}
    </div>







{% endblock %}

