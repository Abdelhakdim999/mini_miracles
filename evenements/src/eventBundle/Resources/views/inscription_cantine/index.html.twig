{% extends 'base.html.twig' %}

{% block body %}



    <div class="box">

        <!-- /.box-header -->
        <div class="box-body">
            <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap"><div class="row"><div class="col-sm-6"><div class="dataTables_length" id="example1_length"></div></div><div class="col-sm-6"><div id="example1_filter" class="dataTables_filter"></div></div></div><div class="row"><div class="col-sm-12"><table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                            <thead>
                            <tr role="row"><th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="entre: activate to sort column ascending" style="width: 110px;">Nom de l'enfant</th><th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="dessert: activate to sort column ascending" style="width: 110px;">Nombre de jour</th><th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="dessert: activate to sort column ascending" style="width: 110px;">Prix</th><th scope="col" role="columnheader" class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="date: activate to sort column ascending" style="width: 110px;">Date de l'inscription</th><th>Action</th></tr>
                            </thead>
                            <div class="jumbotron text-center">
                                <h1>   <label  for="topicOptions" style="font-size: 28px; color: #5bc0de;" class="ng-binding" >Gestion des inscriptions cantine </label> </h1>
                                <div class="input-group input-group-sm">
                                    <input id="search" type="text" class="form-control" placeholder="Taper la date">
                                    <span class="input-group-btn">
                      <button type="button" class="btn btn-info btn-flat"><i class="fa fa-search"></i></button>
                    </span>
                                </div>
                            </div>
                            <ul class="nav" id="side-menu">
                                <li>

                                    <ul class="nav nav-second-level" id="entitiesNav">

                                    </ul>
                                </li>
                            </ul><br><br><br><br>

                            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
                            <script type="text/javascript">
                                jQuery(document).ready(function() {
                                    var searchRequest = null;
                                    $("#search").keyup(function() {
                                        var minlength = 1;
                                        var that = this;
                                        var value = $(this).val();
                                        var entitySelector = $("#entitiesNav").html('');
                                        if (value.length >= minlength ) {
                                            if (searchRequest != null)
                                                searchRequest.abort();
                                            searchRequest = $.ajax({
                                                type: "GET",
                                                url: "{{ path('inscription_cantine_searchc') }}",
                                                data: {
                                                    'q' : value
                                                },
                                                dataType: "text",
                                                success: function(msg){
                                                    //we need to check if the value is the same
                                                    if (value===$(that).val()) {
                                                        var result = JSON.parse(msg);
                                                        $.each(result, function(key, arr) {
                                                            $.each(arr, function(id, value) {
                                                                if (key === 'inscription_cantine') {
                                                                    if (id !== 'error') {
                                                                        console.log(value);
                                                                        entitySelector.append('<ul> ');
                                                                        entitySelector.append('<li><a href="/event/inscription_cantine/'+id+'/show">'+value[0]+'<a/></li><br>');
                                                                        entitySelector.append('</ul> ');
                                                                        entitySelector.append('');
                                                                    } else {
                                                                        entitySelector.append('<li class="errorLi">'+value+'</li>');
                                                                    }
                                                                }
                                                            });
                                                        });
                                                    }
                                                }
                                            });
                                        }
                                    });
                                });
                            </script>

                            <br><br>


                            <tbody>

                            <a class="btn btn-app"  href="{{ path('inscription_cantine_new') }}">
                                <i class="fa fa-save"></i> Ajouter
                            </a>

                            {% for inscription_cantine in inscription_cantines %}
                                <tr>


                                    <td>{{ inscription_cantine.idEnf.nom }} {{ inscription_cantine.idEnf.prenom }}</td>
                                    <td>{{ inscription_cantine.nbrjour }}</td>
                                    <td>{{ inscription_cantine.prix }}</td>
                                    <td>{% if inscription_cantine.dateInsc %}{{ inscription_cantine.dateInsc|date('Y-m-d') }}{% endif %}</td>

                                    <td>
                                        <ul>

                                            <a class="btn btn-app" href="{{ path('inscription_cantine_show', { 'id': inscription_cantine.id }) }}">
                                               <i class="fa fa-eye"></i>
                                            </a>





                                            <a class="btn btn-app" href="{{ path('inscription_cantine_delete2',{'id':inscription_cantine.id}) }}">
                                                <i class="fa fa-trash"></i>
                                            </a>











                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                            <tfoot>

                            </tfoot>

                        </table>

            <ul>

            </ul>
        </div>
                    <div class="navigation">
                        {{ knp_pagination_render(inscription_cantines) }}
                    </div>
        <!-- /.box-body -->
                </div>

            </div>
        </div>
    </div>


{% endblock %}
